<div class="container">
  <h1>New Game</h1>
  <ul id='list_letters'>
    <% @letters.each do |letter| %>
        <li><%= letter.capitalize %></li>
    <% end %>
  </ul>

<div class="form_game">
  <form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
    <label for="word"> What is the longest word you can find ?</label><br>
    <input type="text" name="word">
    <input id='button_play' type="submit" value="Play">
  </form>
</div>
</div>
